{
    "name": "silencenjoyer/laravel-validatable-model",
    "description": "This package moves validation inside of model.",
    "keywords": [
        "silencenjoyer",
        "laravel-validatable-model"
    ],
    "homepage": "https://github.com/silencenjoyer/laravel-validatable-model",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Andrew Gebrich",
            "email": "an_gebrich@outlook.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "laravel/framework": "^10.0.0"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Silencenjoyer\\LaravelValidatableModel\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Silencenjoyer\\LaravelValidatableModel\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "php vendor/bin/phpunit tests",
        "test-coverage": "@php -dzend_extension=xdebug.so -dxdebug.mode=coverage vendor/bin/phpunit tests --coverage-html tests/coverage"
    },
    "config": {
        "sort-packages": true
    }
}
